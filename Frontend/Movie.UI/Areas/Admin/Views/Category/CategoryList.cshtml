@using Movie.Domain.Entities.Enum
@model List<ResultCategoryDTO>

@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int count = 0;
    bool hasCategories = Model != null && Model.Any();

    var updateStatusUrl = Url.Action("UpdateStatus", "Category", new { area = "Admin" });
}

<style>
    :root {
        --primary: #6366f1;
        --success: #10b981;
        --danger: #ef4444;
        --warning: #f59e0b;
        --muted: #6b7280;
        --bg-soft: #f8fafc;
        --text-dark: #1f2937;
        --radius: 12px;
    }

    .admin-card {
        background: #fff;
        border-radius: var(--radius);
        padding: 24px;
        box-shadow: 0 8px 24px rgba(0,0,0,.04);
    }

    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        gap: 16px;
        flex-wrap: wrap;
    }

    .admin-title {
        font-size: 1.5rem;
        font-weight: 900;
        color: var(--text-dark);
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .admin-search {
        position: relative;
        max-width: 340px;
        width: 100%;
    }

        .admin-search input {
            width: 100%;
            padding: 10px 14px 10px 40px;
            border-radius: var(--radius);
            border: 1px solid #e5e7eb;
            background: var(--bg-soft);
            outline: none;
        }

        .admin-search ion-icon {
            position: absolute;
            top: 50%;
            left: 12px;
            transform: translateY(-50%);
            color: var(--muted);
            font-size: 18px;
        }

    .btn-primary-soft {
        background: var(--primary);
        color: #fff;
        padding: 10px 18px;
        border-radius: var(--radius);
        font-weight: 800;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        text-decoration: none;
        border: 0;
        box-shadow: 0 10px 18px rgba(99,102,241,.18);
    }

    .cat-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

        .cat-table thead th {
            font-size: 12px;
            text-transform: uppercase;
            color: var(--muted);
            padding: 8px 12px;
            white-space: nowrap;
        }

        .cat-table tbody tr {
            background: #fff;
            border-radius: var(--radius);
            box-shadow: 0 4px 10px rgba(0,0,0,.03);
            transition: box-shadow .15s ease, transform .15s ease;
        }

            .cat-table tbody tr:hover {
                box-shadow: 0 14px 28px rgba(0,0,0,.08);
                transform: translateY(-1px);
            }

        .cat-table tbody td {
            padding: 14px 12px;
            vertical-align: middle;
            color: var(--text-dark);
        }

    .row-id {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        background: var(--primary);
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 900;
    }

    .row-archived {
        opacity: .62;
        background: #f9fafb !important;
        box-shadow: none !important;
        transform: none !important;
    }

    .cat-name {
        font-weight: 900;
        color: var(--text-dark);
    }

    .cat-desc {
        color: var(--muted);
        font-weight: 700;
        max-width: 420px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .stat-link {
        position: relative;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        text-decoration: none;
    }

        .stat-link::after {
            content: "→";
            opacity: 0;
            transform: translateX(-4px);
            transition: all .15s ease;
            font-weight: 900;
            color: var(--muted);
        }

        .stat-link:hover::after {
            opacity: 1;
            transform: translateX(2px);
        }

        .stat-link[data-tip]::before {
            content: attr(data-tip);
            position: absolute;
            bottom: calc(100% + 6px);
            left: 50%;
            transform: translateX(-50%) translateY(4px);
            background: #111827;
            color: #fff;
            font-size: 11px;
            font-weight: 700;
            padding: 6px 10px;
            border-radius: 8px;
            white-space: nowrap;
            opacity: 0;
            pointer-events: none;
            transition: all .15s ease;
            z-index: 10;
        }

        .stat-link[data-tip]:hover::before {
            opacity: 1;
            transform: translateX(-50%) translateY(0);
        }

    .stat-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 10px;
        border-radius: 999px;
        font-weight: 900;
        font-size: 12px;
        border: 1px solid rgba(0,0,0,.04);
        white-space: nowrap;
        transition: transform .15s ease, box-shadow .15s ease, filter .15s ease;
    }

    .stat-link:hover .stat-badge {
        transform: scale(1.06);
        filter: brightness(0.95);
        box-shadow: 0 10px 18px rgba(0,0,0,.12);
    }

    .badge-movies {
        background: #eef2ff;
        color: #3730a3;
    }

    .badge-reviews {
        background: #fef3c7;
        color: #92400e;
    }

    .stat-disabled {
        opacity: .55;
        cursor: not-allowed;
        pointer-events: none;
        filter: grayscale(35%);
    }

        .stat-disabled .stat-badge {
            box-shadow: none !important;
            transform: none !important;
        }

    .rating-wrap {
        display: flex;
        flex-direction: column;
        gap: 6px;
        min-width: 170px;
    }

    .rating-top {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        font-weight: 900;
        font-size: 12px;
        color: var(--muted);
    }

    .rating-bar {
        width: 100%;
        height: 10px;
        border-radius: 999px;
        background: #f3f4f6;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,.04);
    }

    .rating-fill {
        height: 100%;
        width: 0%;
        border-radius: 999px;
    }

    .rating-low { background: linear-gradient(90deg, #ef4444, #f97316); }
    .rating-mid { background: linear-gradient(90deg, #f59e0b, #fbbf24); }
    .rating-high { background: linear-gradient(90deg, #10b981, #22c55e); }
    .rating-empty { background: linear-gradient(90deg, #d1d5db, #e5e7eb); }

    .no-rating {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 10px;
        border-radius: 999px;
        font-weight: 900;
        font-size: 12px;
        border: 1px dashed rgba(0,0,0,.12);
        color: var(--muted);
        background: #fff;
        white-space: nowrap;
    }

    .status-pill {
        padding: 6px 12px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 900;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        white-space: nowrap;
        border: 1px solid rgba(0,0,0,.04);
    }

    .status-active { background: #ecfdf5; color: #065f46; }
    .status-passive { background: #fee2e2; color: #991b1b; }
    .status-archived { background: #f3f4f6; color: #374151; }
    .status-pending { background: #fffbeb; color: #92400e; }

    .status-select {
        border-radius: 999px;
        padding: 8px 12px;
        font-weight: 900;
        font-size: 12px;
        border: 1px solid rgba(0,0,0,.10);
        background: #fff;
        outline: none;
        cursor: pointer;
    }

        .status-select:disabled {
            opacity: .65;
            cursor: not-allowed;
            background: #f9fafb;
        }

    .action-btn {
        padding: 8px 14px;
        border-radius: var(--radius);
        font-weight: 800;
        font-size: 13px;
        text-decoration: none;
        color: #fff !important;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        white-space: nowrap;
        border: 0;
        cursor: pointer;
    }

    .btn-update { background: var(--success); }
    .btn-archive { background: var(--warning); color: #111827 !important; }
    .btn-restore { background: #0ea5e9; color: #fff !important; }
    .btn-harddelete { background: #7f1d1d; color: #fff !important; }

    .btn-approve { background: var(--primary); }
    .btn-reject { background: var(--danger); }
    .btn-softdelete { background: var(--danger); color: #fff !important; }

    .empty-state {
        border: 1px dashed #e5e7eb;
        border-radius: 16px;
        background: var(--bg-soft);
        padding: 28px;
        text-align: center;
    }

        .empty-state h4 {
            margin: 0 0 6px;
            font-weight: 950;
            color: var(--text-dark);
        }

        .empty-state p {
            margin: 0 0 18px;
            color: var(--muted);
            font-weight: 700;
        }

    .mini-spinner {
        width: 14px;
        height: 14px;
        border-radius: 999px;
        border: 2px solid rgba(255,255,255,.45);
        border-top-color: #fff;
        display: inline-block;
        animation: spin .7s linear infinite;
    }

    @@keyframes spin { to { transform: rotate(360deg); } }

    @@media (max-width: 768px) {
        .cat-table thead { display: none; }
        .cat-table tbody td { display: block; padding: 10px 12px; }
        .cat-table tbody tr { padding: 10px 0; }
        .cat-desc { max-width: 100%; white-space: normal; }
        .rating-wrap { min-width: auto; }
    }
</style>

<div class="admin-card">
    <div class="admin-header">
        <div class="admin-title">🏷️ Kategori Listesi</div>

        @if (hasCategories)
        {
            <div style="display:flex; align-items:center; gap:14px; flex-wrap:wrap;">
                <div class="admin-search">
                    <ion-icon name="search-outline"></ion-icon>
                    <input id="catSearch" type="text" placeholder="Kategori ara..." />
                </div>

                <div style="display:flex; align-items:center; gap:10px; flex-wrap:wrap;">
                    <label style="display:flex; align-items:center; gap:10px; font-weight:900; color:var(--text-dark); cursor:pointer;">
                        <input id="showArchivedToggle" type="checkbox" style="width:18px; height:18px;" />
                        Arşivdekileri Göster
                    </label>

                    <span id="archivedHint" class="count-pill" style="display:none;">
                        <ion-icon name="archive-outline"></ion-icon>
                        Arşivler görünür
                    </span>
                </div>
            </div>
        }

        <a asp-area="Admin"
           asp-controller="Category"
           asp-action="CreateCategory"
           class="btn-primary-soft">
            <ion-icon name="add-circle-outline"></ion-icon>
            Yeni Kategori
        </a>
    </div>

    @if (!hasCategories)
    {
        <div class="empty-state">
            <h4>🏷️ Henüz kategori verisi yok.</h4>
            <p>İlk kategoriyi eklemek için butona tıkla.</p>

            <a asp-area="Admin"
               asp-controller="Category"
               asp-action="CreateCategory"
               class="btn-primary-soft">
                <ion-icon name="add-circle-outline"></ion-icon>
                Kategori Ekle
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="cat-table" id="catTable">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Açıklama</th>
                        <th>Sıra</th>
                        <th>Filmler</th>
                        <th>Yorumlar</th>
                        <th>Ortalama</th>
                        <th>Durum</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.OrderBy(x => x.DisplayOrder).ThenBy(x => x.Name))
                    {
                        count++;

                        string statusClass = "status-archived";
                        string statusIcon = "archive-outline";
                        string statusTr = "Arşiv";

                        switch (item.CategoryStatus)
                        {
                            case CategoryStatus.Pending:
                                statusClass = "status-pending";
                                statusIcon = "time-outline";
                                statusTr = "Onay Bekliyor";
                                break;
                            case CategoryStatus.Active:
                                statusClass = "status-active";
                                statusIcon = "checkmark-circle-outline";
                                statusTr = "Aktif";
                                break;
                            case CategoryStatus.Passive:
                                statusClass = "status-passive";
                                statusIcon = "close-circle-outline";
                                statusTr = "Pasif";
                                break;
                            case CategoryStatus.Archived:
                                statusClass = "status-archived";
                                statusIcon = "archive-outline";
                                statusTr = "Arşiv";
                                break;
                            default:
                                statusClass = "status-archived";
                                statusIcon = "help-circle-outline";
                                statusTr = "Bilinmiyor";
                                break;
                        }

                        var rowClass = item.CategoryStatus == CategoryStatus.Archived ? "row-archived" : "";

                        var avg = item.AvgRating;
                        if (avg < 0) avg = 0;
                        if (avg > 10) avg = 10;

                        bool hasRating = item.ReviewCount > 0;
                        var avgPercent = (int)Math.Round(avg * 10, 0);

                        string ratingClass = "rating-mid";
                        if (!hasRating) ratingClass = "rating-empty";
                        else if (avg < 3) ratingClass = "rating-low";
                        else if (avg >= 7) ratingClass = "rating-high";

                        <tr class="@rowClass" data-archived="@(item.CategoryStatus == CategoryStatus.Archived ? "1" : "0")">
                            <td><div class="row-id">@count</div></td>

                            <td><span class="cat-name">@item.Name</span></td>

                            <td title="@item.Description" class="cat-desc">
                                @(string.IsNullOrWhiteSpace(item.Description) ? "-" : item.Description)
                            </td>

                            <td><strong>@item.DisplayOrder</strong></td>

                            <td>
                                @if (item.MovieCount > 0)
                                {
                                    <a class="stat-link"
                                       data-tip="Filmleri görüntüle"
                                       asp-area="Admin"
                                       asp-controller="Movie"
                                       asp-action="MovieList"
                                       asp-route-categoryId="@item.Id">
                                        <span class="stat-badge badge-movies">
                                            <ion-icon name="film-outline"></ion-icon>
                                            @item.MovieCount
                                        </span>
                                    </a>
                                }
                                else
                                {
                                    <span class="stat-badge badge-movies stat-disabled" title="Film yok">
                                        <ion-icon name="film-outline"></ion-icon> 0
                                    </span>
                                }
                            </td>

                            <td>
                                @if (item.ReviewCount > 0)
                                {
                                    <a class="stat-link"
                                       data-tip="Yorumları görüntüle"
                                       asp-area="Admin"
                                       asp-controller="Review"
                                       asp-action="ReviewList"
                                       asp-route-categoryId="@item.Id">
                                        <span class="stat-badge badge-reviews">
                                            <ion-icon name="chatbubble-ellipses-outline"></ion-icon>
                                            @item.ReviewCount
                                        </span>
                                    </a>
                                }
                                else
                                {
                                    <span class="stat-badge badge-reviews stat-disabled" title="Yorum yok">
                                        <ion-icon name="chatbubble-ellipses-outline"></ion-icon> 0
                                    </span>
                                }
                            </td>

                            <td>
                                @if (!hasRating)
                                {
                                    <span class="no-rating" title="Henüz yorum olmadığı için puan hesaplanmadı">
                                        <ion-icon name="star-outline"></ion-icon>
                                        Henüz puan yok
                                    </span>
                                    <div class="rating-bar" style="margin-top:8px;">
                                        <div class="rating-fill rating-empty" style="width:10%"></div>
                                    </div>
                                }
                                else
                                {
                                    <div class="rating-wrap" title="Ortalama Puan: @avg.ToString("0.0") / 10">
                                        <div class="rating-top">
                                            <span>⭐ @avg.ToString("0.0") / 10</span>
                                            <span>@avgPercent%</span>
                                        </div>
                                        <div class="rating-bar">
                                            <div class="rating-fill @ratingClass" style="width:@avgPercent%"></div>
                                        </div>
                                    </div>
                                }
                            </td>

                            <!-- ✅ DURUM (TEK SELECT - DUPLICATE YOK) -->
                            <td>
                                <div style="display:flex; gap:10px; align-items:center; flex-wrap:wrap;">
                                    <span class="status-pill @statusClass" data-role="status-pill" title="@item.CategoryStatus">
                                        <ion-icon name="@statusIcon"></ion-icon>
                                        <span class="js-status-text">@statusTr</span>
                                    </span>

                                    @if (item.CategoryStatus != CategoryStatus.Pending)
                                    {
                                        <select class="status-select js-status"
                                                data-id="@item.Id"
                                                data-old="@((int)item.CategoryStatus)">

                                            <option value="@((int)CategoryStatus.Active)"
                                                    selected="@(item.CategoryStatus == CategoryStatus.Active)">
                                                Aktif
                                            </option>

                                            <option value="@((int)CategoryStatus.Passive)"
                                                    selected="@(item.CategoryStatus == CategoryStatus.Passive)">
                                                Pasif
                                            </option>

                                            <option value="@((int)CategoryStatus.Archived)"
                                                    selected="@(item.CategoryStatus == CategoryStatus.Archived)">
                                                Arşiv
                                            </option>
                                        </select>
                                    }
                                    else
                                    {
                                        <span class="no-rating" data-role="pending-hint" title="Onay/Reddet bekliyor">
                                            <ion-icon name="time-outline"></ion-icon>
                                            İşlem bekliyor
                                        </span>
                                    }

                                </div>
                            </td>

                            <td>
                                <div data-role="actions" style="display:flex; gap:8px; flex-wrap:wrap; align-items:center;">

                                    <div data-role="actions-not-archived" style="@(item.CategoryStatus == CategoryStatus.Archived ? "display:none;" : "")">

                                        @if (item.CategoryStatus == CategoryStatus.Pending)
                                        {
                                            <button type="button"
                                                    class="action-btn btn-approve js-approve"
                                                    data-id="@item.Id"
                                                    data-title="@item.Name">
                                                <ion-icon name="checkmark-done-outline"></ion-icon>
                                                Onayla
                                            </button>

                                            <button type="button"
                                                    class="action-btn btn-reject js-reject"
                                                    data-id="@item.Id"
                                                    data-title="@item.Name">
                                                <ion-icon name="close-circle-outline"></ion-icon>
                                                Reddet
                                            </button>
                                        }

                                        @if (item.CategoryStatus != CategoryStatus.Pending)
                                        {
                                            <form asp-area="Admin"
                                                  asp-controller="Category"
                                                  asp-action="ArchiveCategory"
                                                  method="post"
                                                  class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="button"
                                                        class="action-btn btn-archive js-archive"
                                                        data-title="@item.Name">
                                                    <ion-icon name="archive-outline"></ion-icon>
                                                    Arşivle
                                                </button>
                                            </form>

                                            <form asp-area="Admin"
                                                  asp-controller="Category"
                                                  asp-action="SoftDeleteCategory"
                                                  method="post"
                                                  class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="button"
                                                        class="action-btn btn-softdelete js-softdelete"
                                                        data-title="@item.Name">
                                                    <ion-icon name="trash-outline"></ion-icon>
                                                    Çöp Kutusu
                                                </button>
                                            </form>
                                        }
                                    </div>

                                    <div data-role="actions-archived" style="@(item.CategoryStatus == CategoryStatus.Archived ? "" : "display:none;")">
                                        <div style="display:flex; gap:8px; flex-wrap:wrap;">
                                            <form asp-area="Admin"
                                                  asp-controller="Category"
                                                  asp-action="UnarchiveCategory"
                                                  method="post"
                                                  class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="button"
                                                        class="action-btn btn-restore js-restore"
                                                        data-title="@item.Name">
                                                    <ion-icon name="refresh-outline"></ion-icon>
                                                    Geri Al
                                                </button>
                                            </form>

                                            <form asp-area="Admin"
                                                  asp-controller="Category"
                                                  asp-action="HardDeleteCategory"
                                                  method="post"
                                                  class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="button"
                                                        class="action-btn btn-harddelete js-harddelete"
                                                        data-title="@item.Name">
                                                    <ion-icon name="trash-outline"></ion-icon>
                                                    Kalıcı Sil
                                                </button>
                                            </form>
                                        </div>
                                    </div>

                                </div>
                            </td>

                            <td>
                                <a asp-area="Admin"
                                   asp-controller="Category"
                                   asp-action="UpdateCategory"
                                   asp-route-id="@item.Id"
                                   class="action-btn btn-update">
                                    <ion-icon name="create-outline"></ion-icon>
                                    Güncelle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<script>
    (function () {
        const toggle = document.getElementById("showArchivedToggle");
        const hint = document.getElementById("archivedHint");
        const table = document.getElementById("catTable");
        const search = document.getElementById("catSearch");

        if (!toggle || !table) return;

        function rowMatchesSearch(row, q) {
            if (!q) return true;
            const nameEl = row.querySelector(".cat-name");
            const t = (nameEl ? nameEl.textContent : "").toLowerCase();
            return t.includes(q);
        }

        function applyFilters() {
            const showArchived = toggle.checked;
            const q = (search ? (search.value || "").toLowerCase() : "");

            const rows = table.querySelectorAll("tbody tr");
            rows.forEach(r => {
                const isArchived = r.getAttribute("data-archived") === "1";

                if (!showArchived && isArchived) {
                    r.style.display = "none";
                    return;
                }

                r.style.display = rowMatchesSearch(r, q) ? "" : "none";
            });

            if (hint) hint.style.display = showArchived ? "inline-flex" : "none";
        }

        toggle.checked = false;
        applyFilters();

        toggle.addEventListener("change", applyFilters);
        if (search) search.addEventListener("input", applyFilters);

        window.applyCategoryFilters = applyFilters;
    })();
</script>

@section Scripts {

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        const STATUS_PENDING = @((int)CategoryStatus.Pending);
        const STATUS_ACTIVE = @((int)CategoryStatus.Active);
        const STATUS_PASSIVE = @((int)CategoryStatus.Passive);
        const STATUS_ARCHIVED = @((int)CategoryStatus.Archived);

        const updateStatusUrl = "@updateStatusUrl";

        const toast = (icon, title) => {
            Swal.fire({
                toast: true,
                position: "top-end",
                showConfirmButton: false,
                timer: 2200,
                timerProgressBar: true,
                icon,
                title
            });
        };

        const getAntiForgeryToken = () => {
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            return tokenInput ? tokenInput.value : null;
        };

        const confirmAndSubmit = (btnSelector, titleText, html, icon, confirmText) => {
            document.querySelectorAll(btnSelector).forEach(btn => {
                btn.addEventListener("click", function () {
                    const title = this.dataset.title || titleText;
                    const form = this.closest("form");
                    if (!form) return;

                    Swal.fire({
                        title: titleText,
                        html: html.replace("{title}", `<b>${title}</b>`),
                        icon: icon,
                        showCancelButton: true,
                        confirmButtonText: confirmText,
                        cancelButtonText: "Vazgeç",
                        reverseButtons: true
                    }).then((result) => {
                        if (result.isConfirmed) form.submit();
                    });
                });
            });
        };

        confirmAndSubmit(".js-archive", "Arşivlemek istediğine emin misin?",
            "{title} arşivlenecek. Listelerde görünmeyebilir.",
            "warning", "Evet, arşivle");

        confirmAndSubmit(".js-restore", "Geri almak istiyor musun?",
            "{title} tekrar aktif olacak.",
            "question", "Evet, geri al");

        confirmAndSubmit(".js-harddelete", "Kalıcı olarak silinsin mi?",
            "{title} kalıcı olarak silinecek. Bu işlem geri alınamaz!",
            "error", "Evet, kalıcı sil");

        confirmAndSubmit(".js-softdelete", "Çöp kutusuna taşınsın mı?",
            "{title} çöp kutusuna taşınacak. İstersen daha sonra kalıcı silebilirsin.",
            "warning", "Evet, taşı");

        const setBtnLoading = (btn, isLoading, loadingText = "İşleniyor...") => {
            if (!btn) return;

            if (!btn.dataset.origHtml) btn.dataset.origHtml = btn.innerHTML;

            if (isLoading) {
                btn.disabled = true;
                btn.style.opacity = ".9";
                btn.style.filter = "grayscale(10%)";
                btn.innerHTML = `<span class="mini-spinner"></span> ${loadingText}`;
            } else {
                btn.disabled = false;
                btn.style.opacity = "";
                btn.style.filter = "";
                btn.innerHTML = btn.dataset.origHtml || btn.innerHTML;
            }
        };

        (function () {

            const statusMap = {
                [STATUS_PENDING]: { cls: "status-pending", icon: "time-outline", text: "Onay Bekliyor", archived: false },
                [STATUS_ACTIVE]: { cls: "status-active", icon: "checkmark-circle-outline", text: "Aktif", archived: false },
                [STATUS_PASSIVE]: { cls: "status-passive", icon: "close-circle-outline", text: "Pasif", archived: false },
                [STATUS_ARCHIVED]: { cls: "status-archived", icon: "archive-outline", text: "Arşiv", archived: true }
            };

            const applyStatus = (tr, pill, statusInt) => {
                const cfg = statusMap[statusInt] || { cls: "status-archived", icon: "help-circle-outline", text: "Bilinmiyor", archived: false };

                pill.classList.remove("status-active", "status-passive", "status-archived", "status-pending");
                pill.classList.add(cfg.cls);

                const iconEl = pill.querySelector("ion-icon");
                if (iconEl) iconEl.setAttribute("name", cfg.icon);

                const textEl = pill.querySelector(".js-status-text");
                if (textEl) textEl.textContent = cfg.text;

                tr.classList.toggle("row-archived", !!cfg.archived);
                tr.setAttribute("data-archived", cfg.archived ? "1" : "0");

                const notArchivedBox = tr.querySelector('[data-role="actions-not-archived"]');
                const archivedBox = tr.querySelector('[data-role="actions-archived"]');

                if (notArchivedBox) notArchivedBox.style.display = cfg.archived ? "none" : "";
                if (archivedBox) archivedBox.style.display = cfg.archived ? "" : "none";

                const approveBtn = tr.querySelector(".js-approve");
                const rejectBtn = tr.querySelector(".js-reject");
                if (approveBtn) approveBtn.style.display = (statusInt === STATUS_PENDING) ? "" : "none";
                if (rejectBtn) rejectBtn.style.display = (statusInt === STATUS_PENDING) ? "" : "none";

                const softDelBtn = tr.querySelector(".js-softdelete");
                if (softDelBtn) {
                    const softForm = softDelBtn.closest("form");
                    if (softForm) softForm.style.display = (statusInt === STATUS_PENDING) ? "none" : "";
                }
            };

            const postStatus = async (id, statusInt) => {
                const token = getAntiForgeryToken();

                const res = await fetch(updateStatusUrl, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        ...(token ? { "RequestVerificationToken": token } : {})
                    },
                    body: JSON.stringify({ id: id, categoryStatus: statusInt })
                });

                if (!res.ok) throw new Error("Update failed");
            };

            const buildStatusSelectHtml = (id, currentStatus) => {
                return `
                    <select class="status-select js-status"
                            data-id="${id}"
                            data-old="${currentStatus}">
                        <option value="${STATUS_ACTIVE}"  ${currentStatus === STATUS_ACTIVE ? 'selected="selected"' : ""}>Aktif</option>
                        <option value="${STATUS_PASSIVE}" ${currentStatus === STATUS_PASSIVE ? 'selected="selected"' : ""}>Pasif</option>
                        <option value="${STATUS_ARCHIVED}"${currentStatus === STATUS_ARCHIVED ? 'selected="selected"' : ""}>Arşiv</option>
                    </select>
                `;
            };

            const ensureSelectAfterPending = (tr, id, newStatus) => {
                const statusCell = tr.querySelector("td:nth-child(8)");
                if (!statusCell) return;

                const wrap = statusCell.querySelector("div");
                if (!wrap) return;

                const existing = wrap.querySelector(".js-status");
                if (existing) return;

                const pendingHint = wrap.querySelector('[data-role="pending-hint"]');
                if (pendingHint) pendingHint.remove();

                wrap.insertAdjacentHTML("beforeend", buildStatusSelectHtml(id, newStatus));
            };

            const bindPendingAction = (selector, targetStatusInt, confirmTitle, confirmHtml, successToast, loadingText) => {
                document.querySelectorAll(selector).forEach(btn => {
                    btn.addEventListener("click", async function () {

                        const id = parseInt(this.dataset.id);
                        const title = this.dataset.title || "Kategori";

                        const tr = this.closest("tr");
                        const pill = tr ? tr.querySelector('[data-role="status-pill"]') : null;

                        if (!tr || !pill) return;

                        const ask = await Swal.fire({
                            title: confirmTitle,
                            html: confirmHtml.replace("{title}", `<b>${title}</b>`),
                            icon: "question",
                            showCancelButton: true,
                            confirmButtonText: "Evet",
                            cancelButtonText: "Vazgeç",
                            reverseButtons: true
                        });

                        if (!ask.isConfirmed) return;

                        setBtnLoading(this, true, loadingText || "İşleniyor...");

                        applyStatus(tr, pill, targetStatusInt);
                        ensureSelectAfterPending(tr, id, targetStatusInt);

                        try {
                            await postStatus(id, targetStatusInt);

                            const sel = tr.querySelector(".js-status");
                            if (sel) sel.dataset.old = String(targetStatusInt);

                            toast("success", successToast);
                        } catch (e) {
                            toast("error", "❌ İşlem başarısız. Sayfayı yenileyip tekrar dene.");
                            console.error(e);
                        } finally {
                            setBtnLoading(this, false);
                            if (window.applyCategoryFilters) window.applyCategoryFilters();
                        }
                    });
                });
            };

            bindPendingAction(
                ".js-approve",
                STATUS_ACTIVE,
                "Onayla?",
                "{title} kategorisi aktif edilecek.",
                "✅ Kategori onaylandı (Aktif).",
                "Onaylanıyor..."
            );

            bindPendingAction(
                ".js-reject",
                STATUS_PASSIVE,
                "Reddet?",
                "{title} kategorisi pasif duruma alınacak.",
                "✅ Kategori reddedildi (Pasif).",
                "Reddediliyor..."
            );

            // ✅ Delegated dropdown change handler
            document.addEventListener("change", async function (e) {
                const sel = e.target;
                if (!sel || !sel.classList || !sel.classList.contains("js-status")) return;

                const tr = sel.closest("tr");
                const pill = tr ? tr.querySelector('[data-role="status-pill"]') : null;
                if (!tr || !pill) return;

                const id = parseInt(sel.dataset.id);
                const oldVal = parseInt(sel.dataset.old || sel.value);
                const newVal = parseInt(sel.value);

                applyStatus(tr, pill, newVal);
                sel.disabled = true;

                try {
                    await postStatus(id, newVal);

                    sel.dataset.old = String(newVal);
                    toast("success", "✅ Durum güncellendi.");
                } catch (err) {
                    sel.value = String(oldVal);
                    applyStatus(tr, pill, oldVal);
                    toast("error", "❌ Durum güncellenemedi.");
                    console.error(err);
                } finally {
                    sel.disabled = false;
                    if (window.applyCategoryFilters) window.applyCategoryFilters();
                }
            });

        })();
    </script>
}
