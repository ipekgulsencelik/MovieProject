@using Movie.Domain.Entities.Enum
@model List<ResultCategoryDTO>

@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int count = 0;
    bool hasCategories = Model != null && Model.Any();
}

<style>
    :root {
        --primary: #6366f1;
        --success: #10b981;
        --danger: #ef4444;
        --warning: #f59e0b;
        --muted: #6b7280;
        --bg-soft: #f8fafc;
        --text-dark: #1f2937;
        --radius: 12px;
    }

    .admin-card {
        background: #fff;
        border-radius: var(--radius);
        padding: 24px;
        box-shadow: 0 8px 24px rgba(0,0,0,.04);
    }

    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        gap: 16px;
        flex-wrap: wrap;
    }

    .admin-title {
        font-size: 1.5rem;
        font-weight: 900;
        color: var(--text-dark);
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .admin-search {
        position: relative;
        max-width: 340px;
        width: 100%;
    }

        .admin-search input {
            width: 100%;
            padding: 10px 14px 10px 40px;
            border-radius: var(--radius);
            border: 1px solid #e5e7eb;
            background: var(--bg-soft);
            outline: none;
        }

        .admin-search ion-icon {
            position: absolute;
            top: 50%;
            left: 12px;
            transform: translateY(-50%);
            color: var(--muted);
            font-size: 18px;
        }

    .btn-primary-soft {
        background: var(--primary);
        color: #fff;
        padding: 10px 18px;
        border-radius: var(--radius);
        font-weight: 800;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        text-decoration: none;
        border: 0;
        box-shadow: 0 10px 18px rgba(99,102,241,.18);
    }

    .cat-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

        .cat-table thead th {
            font-size: 12px;
            text-transform: uppercase;
            color: var(--muted);
            padding: 8px 12px;
            white-space: nowrap;
        }

        .cat-table tbody tr {
            background: #fff;
            border-radius: var(--radius);
            box-shadow: 0 4px 10px rgba(0,0,0,.03);
            transition: box-shadow .15s ease, transform .15s ease;
        }

            .cat-table tbody tr:hover {
                box-shadow: 0 14px 28px rgba(0,0,0,.08);
                transform: translateY(-1px);
            }

        .cat-table tbody td {
            padding: 14px 12px;
            vertical-align: middle;
            color: var(--text-dark);
        }

    .row-id {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        background: var(--primary);
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 900;
    }

    /* Archived row */
    .row-archived {
        opacity: .62;
        background: #f9fafb !important;
        box-shadow: none !important;
        transform: none !important;
    }

    .cat-name {
        font-weight: 900;
        color: var(--text-dark);
    }

    .cat-desc {
        color: var(--muted);
        font-weight: 700;
        max-width: 420px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    /* Count badges (clickable) */
    .stat-link {
        position: relative;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        text-decoration: none;
    }

        /* Arrow on hover */
        .stat-link::after {
            content: "→";
            opacity: 0;
            transform: translateX(-4px);
            transition: all .15s ease;
            font-weight: 900;
            color: var(--muted);
        }

        .stat-link:hover::after {
            opacity: 1;
            transform: translateX(2px);
        }

        /* Mini tooltip */
        .stat-link[data-tip]::before {
            content: attr(data-tip);
            position: absolute;
            bottom: calc(100% + 6px);
            left: 50%;
            transform: translateX(-50%) translateY(4px);
            background: #111827;
            color: #fff;
            font-size: 11px;
            font-weight: 700;
            padding: 6px 10px;
            border-radius: 8px;
            white-space: nowrap;
            opacity: 0;
            pointer-events: none;
            transition: all .15s ease;
            z-index: 10;
        }

        .stat-link[data-tip]:hover::before {
            opacity: 1;
            transform: translateX(-50%) translateY(0);
        }

    .stat-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 10px;
        border-radius: 999px;
        font-weight: 900;
        font-size: 12px;
        border: 1px solid rgba(0,0,0,.04);
        white-space: nowrap;
        transition: transform .15s ease, box-shadow .15s ease, filter .15s ease;
    }

    .stat-link:hover .stat-badge {
        transform: scale(1.06);
        filter: brightness(0.95);
        box-shadow: 0 10px 18px rgba(0,0,0,.12);
    }

    .stat-link:hover ion-icon {
        filter: saturate(1.2);
    }

    .badge-movies {
        background: #eef2ff;
        color: #3730a3;
    }

    .badge-reviews {
        background: #fef3c7;
        color: #92400e;
    }

    /* Disabled (0 counts) */
    .stat-disabled {
        opacity: .55;
        cursor: not-allowed;
        pointer-events: none;
        filter: grayscale(35%);
    }

        .stat-disabled .stat-badge {
            box-shadow: none !important;
            transform: none !important;
        }

    /* Rating */
    .rating-wrap {
        display: flex;
        flex-direction: column;
        gap: 6px;
        min-width: 170px;
    }

    .rating-top {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        font-weight: 900;
        font-size: 12px;
        color: var(--muted);
    }

    .rating-bar {
        width: 100%;
        height: 10px;
        border-radius: 999px;
        background: #f3f4f6;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,.04);
    }

    .rating-fill {
        height: 100%;
        width: 0%;
        border-radius: 999px;
    }

    .rating-low {
        background: linear-gradient(90deg, #ef4444, #f97316);
    }

    .rating-mid {
        background: linear-gradient(90deg, #f59e0b, #fbbf24);
    }

    .rating-high {
        background: linear-gradient(90deg, #10b981, #22c55e);
    }

    .rating-empty {
        background: linear-gradient(90deg, #d1d5db, #e5e7eb);
    }

    .no-rating {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 10px;
        border-radius: 999px;
        font-weight: 900;
        font-size: 12px;
        border: 1px dashed rgba(0,0,0,.12);
        color: var(--muted);
        background: #fff;
        white-space: nowrap;
    }

    /* Status */
    .status-pill {
        padding: 6px 12px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 900;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        white-space: nowrap;
        border: 1px solid rgba(0,0,0,.04);
    }

    .status-active {
        background: #ecfdf5;
        color: #065f46;
    }

    .status-passive {
        background: #fee2e2;
        color: #991b1b;
    }

    .status-archived {
        background: #f3f4f6;
        color: #374151;
    }

    .status-select {
        border-radius: 999px;
        padding: 8px 12px;
        font-weight: 900;
        font-size: 12px;
        border: 1px solid rgba(0,0,0,.10);
        background: #fff;
        outline: none;
        cursor: pointer;
    }

    /* Actions */
    .action-btn {
        padding: 8px 14px;
        border-radius: var(--radius);
        font-weight: 800;
        font-size: 13px;
        text-decoration: none;
        color: #fff !important;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        white-space: nowrap;
        border: 0;
        cursor: pointer;
    }

    .btn-delete {
        background: var(--danger);
    }

    .btn-update {
        background: var(--success);
    }

    /* Empty */
    .empty-state {
        border: 1px dashed #e5e7eb;
        border-radius: 16px;
        background: var(--bg-soft);
        padding: 28px;
        text-align: center;
    }

        .empty-state h4 {
            margin: 0 0 6px;
            font-weight: 950;
            color: var(--text-dark);
        }

        .empty-state p {
            margin: 0 0 18px;
            color: var(--muted);
            font-weight: 700;
        }

    @@media (max-width: 768px) {
        .cat-table thead {
            display: none;
        }

        .cat-table tbody td {
            display: block;
            padding: 10px 12px;
        }

        .cat-table tbody tr {
            padding: 10px 0;
        }

        .cat-desc {
            max-width: 100%;
            white-space: normal;
        }

        .rating-wrap {
            min-width: auto;
        }
    }
</style>

<div class="admin-card">
    <div class="admin-header">
        <div class="admin-title">🏷️ Kategori Listesi</div>

        @if (hasCategories)
        {
            <div class="admin-search">
                <ion-icon name="search-outline"></ion-icon>
                <input id="catSearch" type="text" placeholder="Kategori ara..." />
            </div>
        }

        <a asp-area="Admin"
           asp-controller="Category"
           asp-action="CreateCategory"
           class="btn-primary-soft">
            <ion-icon name="add-circle-outline"></ion-icon>
            Yeni Kategori
        </a>
    </div>

    @if (!hasCategories)
    {
        <div class="empty-state">
            <h4>🏷️ Henüz kategori verisi yok.</h4>
            <p>İlk kategoriyi eklemek için butona tıkla.</p>

            <a asp-area="Admin"
               asp-controller="Category"
               asp-action="CreateCategory"
               class="btn-primary-soft">
                <ion-icon name="add-circle-outline"></ion-icon>
                Kategori Ekle
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="cat-table" id="catTable">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Açıklama</th>
                        <th>Sıra</th>
                        <th>Filmler</th>
                        <th>Yorumlar</th>
                        <th>Ortalama</th>
                        <th>Durum</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.OrderBy(x => x.DisplayOrder).ThenBy(x => x.Name))
                    {
                        count++;

                        // Status mapping
                        string statusClass, statusIcon, statusTr;
                        switch (item.CategoryStatus)
                        {
                            case CategoryStatus.Active:
                                statusClass = "status-active";
                                statusIcon = "checkmark-circle-outline";
                                statusTr = "Aktif";
                                break;

                            case CategoryStatus.Passive:
                                statusClass = "status-passive";
                                statusIcon = "close-circle-outline";
                                statusTr = "Pasif";
                                break;

                            case CategoryStatus.Archived:
                                statusClass = "status-archived";
                                statusIcon = "archive-outline";
                                statusTr = "Arşiv";
                                break;

                            default:
                                statusClass = "status-archived";
                                statusIcon = "help-circle-outline";
                                statusTr = "Bilinmiyor";
                                break;
                        }

                        var rowClass = item.CategoryStatus == CategoryStatus.Archived ? "row-archived" : "";

                        // AvgRating: 0..10 -> 0..100
                        var avg = item.AvgRating;
                        if (avg < 0) avg = 0;
                        if (avg > 10) avg = 10;

                        var avgPercent = (int)Math.Round(avg * 10, 0);

                        string ratingClass = "rating-mid";
                        if (avg < 3) ratingClass = "rating-low";
                        else if (avg >= 7) ratingClass = "rating-high";

                        <tr class="@rowClass" data-cat-id="@item.Id">
                            <td><div class="row-id">@count</div></td>

                            <td><span class="cat-name">@item.Name</span></td>

                            <td title="@item.Description" class="cat-desc">
                                @(string.IsNullOrWhiteSpace(item.Description) ? "-" : item.Description)
                            </td>

                            <td><strong>@item.DisplayOrder</strong></td>

                            <!-- 🎬 Filmler (clickable if > 0) -->
                            <td>
                                @if (item.MovieCount > 0)
                                {
                                    <a class="stat-link"
                                       data-tip="Filmleri görüntüle"
                                       asp-area="Admin"
                                       asp-controller="Movie"
                                       asp-action="MovieListAsync"
                                       asp-route-categoryId="@item.Id">
                                        <span class="stat-badge badge-movies">
                                            <ion-icon name="film"></ion-icon>
                                            @item.MovieCount
                                        </span>
                                    </a>
                                }
                                else
                                {
                                    <span class="stat-disabled" title="Bu kategoride film yok">
                                        <span class="stat-badge badge-movies">
                                            <ion-icon name="film"></ion-icon>
                                            0
                                        </span>
                                    </span>
                                }
                            </td>

                            <!-- 💬 Yorumlar (clickable if > 0) -->
                            <td>
                                @if (item.ReviewCount > 0)
                                {
                                    <a class="stat-link"
                                       data-tip="Yorumları görüntüle"
                                       asp-area="Admin"
                                       asp-controller="Review"
                                       asp-action="ReviewList"
                                       asp-route-categoryId="@item.Id">
                                        <span class="stat-badge badge-reviews">
                                            <ion-icon name="chatbubble-ellipses"></ion-icon>
                                            @item.ReviewCount
                                        </span>
                                    </a>
                                }
                                else
                                {
                                    <span class="stat-disabled" title="Bu kategoride yorum yok">
                                        <span class="stat-badge badge-reviews">
                                            <ion-icon name="chatbubble-ellipses"></ion-icon>
                                            0
                                        </span>
                                    </span>
                                }
                            </td>

                            <!-- ⭐ Ortalama -->
                            <td>
                                @if (item.ReviewCount <= 0)
                                {
                                    <span class="no-rating" title="Henüz yorum olmadığı için puan hesaplanmadı">
                                        <ion-icon name="star-outline"></ion-icon>
                                        Henüz puan yok
                                    </span>
                                    <div class="rating-bar" style="margin-top:8px;">
                                        <div class="rating-fill rating-empty" style="width:10%"></div>
                                    </div>
                                }
                                else
                                {
                                    <div class="rating-wrap" title="Ortalama Puan: @avg.ToString("0.0") / 10">
                                        <div class="rating-top">
                                            <span>⭐ @avg.ToString("0.0") / 10</span>
                                            <span>@avgPercent%</span>
                                        </div>
                                        <div class="rating-bar">
                                            <div class="rating-fill @ratingClass" style="width:@avgPercent%"></div>
                                        </div>
                                    </div>
                                }
                            </td>

                            <!-- Durum (inline change) -->
                            <td>
                                <div style="display:flex; gap:10px; align-items:center; flex-wrap:wrap;">
                                    <span class="status-pill @statusClass" data-role="status-pill" title="@item.CategoryStatus">
                                        <ion-icon name="@statusIcon"></ion-icon>
                                        <span class="js-status-text">@statusTr</span>
                                    </span>

                                    <select class="status-select js-status"
                                            data-id="@item.Id"
                                            data-old="@((int)item.CategoryStatus)">
                                        <option value="1" selected="@(item.CategoryStatus == CategoryStatus.Active)">Aktif</option>
                                        <option value="2" selected="@(item.CategoryStatus == CategoryStatus.Passive)">Pasif</option>
                                        <option value="3" selected="@(item.CategoryStatus == CategoryStatus.Archived)">Arşiv</option>
                                    </select>
                                </div>
                            </td>

                            <!-- Sil -->
                            <td>
                                <form asp-area="Admin"
                                      asp-controller="Category"
                                      asp-action="DeleteCategory"
                                      method="post"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="button"
                                            class="action-btn btn-delete js-delete"
                                            data-title="@item.Name">
                                        Sil
                                    </button>
                                </form>
                            </td>

                            <!-- Güncelle -->
                            <td>
                                <a asp-area="Admin"
                                   asp-controller="Category"
                                   asp-action="UpdateCategory"
                                   asp-route-id="@item.Id"
                                   class="action-btn btn-update">
                                    Güncelle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        const toast = (icon, title) => {
            Swal.fire({
                toast: true,
                position: "top-end",
                showConfirmButton: false,
                timer: 2200,
                timerProgressBar: true,
                icon,
                title
            });
        };

        const getAntiForgeryToken = () => {
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            return tokenInput ? tokenInput.value : null;
        };

        // Search (Name)
        (function () {
            const search = document.getElementById("catSearch");
            const table = document.getElementById("catTable");
            if (!search || !table) return;

            search.addEventListener("input", function () {
                const q = (this.value || "").toLowerCase();
                const rows = table.querySelectorAll("tbody tr");

                rows.forEach(r => {
                    const nameEl = r.querySelector(".cat-name");
                    const t = (nameEl ? nameEl.textContent : "").toLowerCase();
                    r.style.display = t.includes(q) ? "" : "none";
                });
            });
        })();

        // Delete confirm
        (function () {
            document.querySelectorAll(".js-delete").forEach(btn => {
                btn.addEventListener("click", function () {
                    const title = this.dataset.title || "Bu kategori";
                    const form = this.closest("form");
                    if (!form) return;

                    Swal.fire({
                        title: "Silmek istediğine emin misin?",
                        html: `<b>${title}</b> silinecek. Bu işlem geri alınamaz.`,
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonText: "Evet, sil",
                        cancelButtonText: "Vazgeç",
                        reverseButtons: true
                    }).then((result) => {
                        if (result.isConfirmed) form.submit();
                    });
                });
            });
        })();

        // Inline STATUS update (Ajax) + optimistic UI
        (function () {
            const selects = document.querySelectorAll(".js-status");
            if (!selects.length) return;

            const statusMap = {
                1: { cls: "status-active",   icon: "checkmark-circle-outline", text: "Aktif", archived: false },
                2: { cls: "status-passive",  icon: "close-circle-outline",     text: "Pasif", archived: false },
                3: { cls: "status-archived", icon: "archive-outline",          text: "Arşiv", archived: true  }
            };

            const applyStatus = (tr, pill, statusInt) => {
                const cfg = statusMap[statusInt] || { cls: "status-archived", icon: "help-circle-outline", text: "Bilinmiyor", archived: false };

                pill.classList.remove("status-active", "status-passive", "status-archived");
                pill.classList.add(cfg.cls);

                const iconEl = pill.querySelector("ion-icon");
                if (iconEl) iconEl.setAttribute("name", cfg.icon);

                const textEl = pill.querySelector(".js-status-text");
                if (textEl) textEl.textContent = cfg.text;

                tr.classList.toggle("row-archived", !!cfg.archived);
            };

            selects.forEach(sel => {
                sel.addEventListener("change", async function () {
                    const tr = this.closest("tr");
                    const pill = tr ? tr.querySelector('[data-role="status-pill"]') : null;
                    if (!tr || !pill) return;

                    const id = parseInt(this.dataset.id);
                    const oldVal = parseInt(this.dataset.old);
                    const newVal = parseInt(this.value);

                    applyStatus(tr, pill, newVal);
                    this.disabled = true;

                    try {
                        const token = getAntiForgeryToken();

                        const res = await fetch("/Admin/Category/UpdateStatus", {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/json",
                                ...(token ? { "RequestVerificationToken": token } : {})
                            },
                            body: JSON.stringify({ id: id, categoryStatus: newVal })
                        });

                        if (!res.ok) throw new Error("Update failed");

                        this.dataset.old = newVal;
                        toast("success", "✅ Durum güncellendi.");
                    } catch (e) {
                        this.value = oldVal;
                        applyStatus(tr, pill, oldVal);
                        toast("error", "❌ Durum güncellenemedi.");
                    } finally {
                        this.disabled = false;
                    }
                });
            });
        })();
    </script>
}